<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TcpCommunicator.TestGui.ViewServices;assembly=TcpCommunicator.TestGui"
        xmlns:localRoot="clr-namespace:TcpCommunicator.TestGui;assembly=TcpCommunicator.TestGui"
        mc:Ignorable="d"
        Width="400" Height="250"
        x:Class="TcpCommunicator.TestGui.ViewServices.ConnectionConfigControl"
        d:DataContext="{x:Static local:DesignData.ConnectionConfigVM}">
    
    <DockPanel LastChildFill="True">
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <StackPanel.Styles>
                <Style Selector="Button">
                    <Setter Property="Width" Value="125" />
                    <Setter Property="Margin" Value="3" />
                </Style>
            </StackPanel.Styles>
          
            <Button Content="OK" Command="{Binding Path=Command_OK}" />
            <Button Content="Cancel" Command="{Binding Path=Command_Cancel}" />
        </StackPanel>
      
        <localRoot:PropertyGrid SelectedObject="{Binding Path=Model}" />
    </DockPanel>
</UserControl>