<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        xmlns:local="clr-namespace:TcpCommunicator.TestGui;assembly=TcpCommunicator.TestGui"
        x:Class="TcpCommunicator.TestGui.ErrorDialog"
        Title="ErrorDialog"
        Width="300" Height="200"
        d:DataContext="{x:Static local:DesignData.ErrorDialogVM}">
    <DockPanel LastChildFill="True">
        <Grid DockPanel.Dock="Bottom">
            <Button Content="OK" Width="125"
                    Command="{Binding Path=Command_OK}"
                    Margin="3" />
        </Grid>
      
        <StackPanel Orientation="Vertical">
            <TextBlock Text="{Binding Path=Title}"
                       Classes="h1"/>
            <TextBlock Text="{Binding Path=MainMessage}"
                       Classes="h2"/>
        </StackPanel>
    </DockPanel>
</Window>
